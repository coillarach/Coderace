<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

    <style name="ButtonBarButton" />

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="FullScreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/black_overlay</item>
        <item name="android:textColor">@color/light_text</item>
    </style>
    
    <style name="DialogTitle">
        <item name="android:textColor">@color/light_text</item>
    </style>
    
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:text">@string/action_cancel</item>
    </style>
    
    <style name="InputField">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/light_background</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    
    <style name="InfoField">
        <item name="android:padding">4dp</item>
		<item name="android:background">@drawable/countdown_background</item>
        </style>
    
    <style name="controlStyle">
    	<item name="android:background">@drawable/control_selector</item>
	    <item name="android:scaleType">fitCenter</item>
	</style>

    <style name="toggleStyle">
       	<item name="android:background">@drawable/toggle_selector</item>
	    <item name="android:scaleType">fitCenter</item>
	</style>
    
    <style name="bigText">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/light_text</item>
    </style>
    
</resources>